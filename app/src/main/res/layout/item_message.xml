<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_15"
    android:paddingTop="@dimen/dimen_10"
    android:paddingRight="@dimen/dimen_15"
    android:paddingBottom="@dimen/dimen_zero_5">

    <com.demo.ctw.ui.view.BorderTextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="@dimen/dimen_6"
        android:paddingTop="@dimen/dimen_2"
        android:paddingRight="@dimen/dimen_6"
        android:paddingBottom="@dimen/dimen_2"
        android:text="时间"
        android:textColor="@color/white"
        android:textSize="@dimen/size_10"
        app:contentBackColor="@color/C5"
        app:cornerRadius="@dimen/dimen_5"
        app:followTextColor="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:background="@drawable/bg_white_corner"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_10">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30" />

            <TextView
                android:id="@+id/txt_type"
                style="@style/txt_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/divide" />

        <TextView
            android:id="@+id/txt_info"
            style="@style/txt_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10" />
    </LinearLayout>

</LinearLayout>
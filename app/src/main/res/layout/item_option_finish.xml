<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_6"
    android:orientation="vertical">

    <LinearLayout style="@style/layout_white_height">

        <TextView
            android:id="@+id/txt_time"
            style="@style/txt_other"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.demo.ctw.ui.view.BorderTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dimen_6"
            android:paddingTop="@dimen/dimen_1"
            android:paddingRight="@dimen/dimen_6"
            android:paddingBottom="@dimen/dimen_1"
            android:text="已反馈"
            android:textColor="@color/C2"
            android:textSize="@dimen/size_14"
            app:contentBackColor="@color/C5"
            app:cornerRadius="@dimen/dimen_5" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_title"
        style="@style/txt_white_height"
        android:layout_marginTop="@dimen/dimen_1"
        android:textColor="@color/C2"
        android:textSize="@dimen/size_15" />

    <com.demo.ctw.ui.view.NoScrollGridView
        android:id="@+id/view_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:horizontalSpacing="@dimen/dimen_6"
        android:listSelector="@color/transparent"
        android:numColumns="3"
        android:paddingLeft="@dimen/size_15"
        android:paddingRight="@dimen/size_15"
        android:paddingBottom="@dimen/dimen_8"
        android:verticalSpacing="@dimen/dimen_6" />

    <TextView
        android:id="@+id/txt_intro"
        style="@style/txt_white_height"
        android:layout_marginTop="@dimen/dimen_1"
        android:textColor="@color/C3"
        android:textSize="@dimen/size_13" />
</LinearLayout>
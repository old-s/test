<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_5"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimen_15"
    android:paddingTop="@dimen/dimen_10"
    android:paddingRight="@dimen/dimen_15"
    android:paddingBottom="@dimen/dimen_10">

    <RadioButton
        android:id="@+id/view_check"
        android:layout_width="@dimen/dimen_20"
        android:layout_height="@dimen/dimen_20"
        android:background="@drawable/bg_check"
        android:button="@color/transparent"
        android:checked="true"
        android:clickable="false" />

    <LinearLayout
        android:layout_width="@dimen/dimen_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_name"
            style="@style/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_address"
            style="@style/txt_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_10"
            android:drawableLeft="@mipmap/ic_location"
            android:drawablePadding="@dimen/dimen_6"
            android:ellipsize="end"
            android:singleLine="true" />

        <TextView
            android:id="@+id/txt_number"
            style="@style/txt_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_4"
            android:drawableLeft="@mipmap/ic_shop"
            android:drawablePadding="@dimen/dimen_6" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/ic_map"
        android:drawablePadding="@dimen/dimen_4"
        android:textSize="@dimen/size_12"
        android:text="查看地图" />
</LinearLayout>
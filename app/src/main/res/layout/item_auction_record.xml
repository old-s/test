<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_10"
    android:orientation="vertical">

    <LinearLayout style="@style/layout_white_40">

        <TextView
            android:id="@+id/txt_status1"
            style="@style/txt_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_date"
            style="@style/txt_other"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_weight="1" />

        <com.demo.ctw.ui.view.BorderTextView
            android:id="@+id/txt_status2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_6"
            android:paddingTop="@dimen/dimen_1"
            android:paddingRight="@dimen/dimen_6"
            android:paddingBottom="@dimen/dimen_1"
            app:cornerRadius="@dimen/dimen_5" />
    </LinearLayout>

    <LinearLayout
        style="@style/layout_white_height"
        android:layout_marginTop="@dimen/dimen_1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title"
            style="@style/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_6"
            android:layout_marginBottom="@dimen/dimen_6"
            android:gravity="bottom">

            <TextView
                style="@style/txt_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出价 ¥" />

            <TextView
                android:id="@+id/txt_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_6"
                android:textColor="@color/app"
                android:textSize="@dimen/size_16" />

            <TextView
                android:id="@+id/txt_price"
                style="@style/txt_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_35"
            android:layout_marginTop="@dimen/dimen_1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:text="竞拍结束，未中标的用户我们会将押金退回到您的收汇款账号"
            android:textColor="@color/C3"
            android:textSize="@dimen/size_13" />

    </LinearLayout>
</LinearLayout>
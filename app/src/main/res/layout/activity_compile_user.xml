<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:background="@color/app"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:padding="@dimen/dimen_5"
            android:src="@mipmap/ic_back" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="个人资料"
            android:textColor="@color/white"
            android:textSize="@dimen/size_20" />

        <TextView
            android:id="@+id/txt_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_15"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout style="@style/layout_white_40">

                <TextView
                    style="@style/txt_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名称" />

                <EditText
                    android:id="@+id/edt_nickname"
                    style="@style/txt_msg"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="right"
                    android:maxLength="20" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_white_height"
                android:layout_marginTop="@dimen/dimen_1">

                <TextView
                    style="@style/txt_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头像" />

                <TextView
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_40"
                    android:src="@mipmap/ic_add_pic" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_white_40"
                android:layout_marginTop="@dimen/dimen_1">

                <TextView
                    style="@style/txt_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号" />

                <TextView
                    android:id="@+id/txt_tel"
                    style="@style/txt_msg"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_white_40"
                android:layout_marginTop="@dimen/dimen_1">

                <TextView
                    style="@style/txt_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司名称" />

                <TextView
                    android:id="@+id/txt_companyname"
                    style="@style/txt_msg"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_white_40"
                android:layout_marginTop="@dimen/dimen_1">

                <TextView
                    style="@style/txt_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营业执照照片" />

                <TextView
                    style="@style/txt_msg"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/ic_right"
                    android:drawablePadding="@dimen/dimen_4"
                    android:gravity="right"
                    android:text="已添加" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_white_40"
                android:layout_marginTop="@dimen/dimen_6">

                <TextView
                    style="@style/txt_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="管理员姓名" />

                <TextView
                    android:id="@+id/txt_gname"
                    style="@style/txt_msg"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_white_40"
                android:layout_marginTop="@dimen/dimen_1">

                <TextView
                    style="@style/txt_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证照片" />

                <TextView
                    android:id="@+id/txt_sfz"
                    style="@style/txt_msg"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/ic_right"
                    android:drawablePadding="@dimen/dimen_4"
                    android:gravity="right"
                    android:text="已添加" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_white_40"
                android:layout_marginTop="@dimen/dimen_6">

                <TextView
                    style="@style/txt_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="银行卡号" />

                <TextView
                    android:id="@+id/txt_banknum"
                    style="@style/txt_msg"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_white_40"
                android:layout_marginTop="@dimen/dimen_1">

                <TextView
                    style="@style/txt_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开户行" />

                <TextView
                    android:id="@+id/txt_bank"
                    style="@style/txt_msg"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_white_40"
                android:layout_marginTop="@dimen/dimen_6">

                <TextView
                    style="@style/txt_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话" />

                <TextView
                    android:id="@+id/txt_phone"
                    style="@style/txt_msg"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_white_40"
                android:layout_marginTop="@dimen/dimen_1">

                <TextView
                    style="@style/txt_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邮箱" />

                <TextView
                    android:id="@+id/txt_email"
                    style="@style/txt_msg"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_white_40"
                android:layout_marginTop="@dimen/dimen_1">

                <TextView
                    style="@style/txt_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信" />

                <TextView
                    android:id="@+id/txt_wechat"
                    style="@style/txt_msg"
                    android:layout_width="@dimen/dimen_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:gravity="right" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:background="@color/app"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/size_20" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_140"
        android:background="@mipmap/bg_login"
        android:gravity="center"
        android:text="欢迎来到超推网"
        android:textColor="@color/white"
        android:textSize="@dimen/size_14" />

    <ImageView
        android:id="@+id/img_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-45dp"
        android:src="@mipmap/ic_logo" />


    <EditText
        android:id="@+id/edt_phone"
        style="@style/txt_msg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_50"
        android:layout_marginRight="@dimen/dimen_40"
        android:background="@drawable/bg_divide_corner_20"
        android:drawableLeft="@mipmap/ic_phone"
        android:drawablePadding="@dimen/dimen_15"
        android:hint="请输入手机号"
        android:inputType="number"
        android:maxLength="11"
        android:paddingLeft="@dimen/dimen_15"
        android:textColorHint="@color/C4" />

    <EditText
        android:id="@+id/edt_psw"
        style="@style/txt_msg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_40"
        android:background="@drawable/bg_divide_corner_20"
        android:drawableLeft="@mipmap/ic_passward"
        android:drawablePadding="@dimen/dimen_15"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLength="11"
        android:paddingLeft="@dimen/dimen_15"
        android:textColorHint="@color/C4" />

    <TextView
        android:id="@+id/txt_login"
        style="@style/txt_blue"
        android:layout_marginTop="@dimen/dimen_30"
        android:text="登录" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_40">

        <TextView
            android:id="@+id/txt_forget"
            style="@style/txt_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码" />

        <TextView
            android:id="@+id/txt_register"
            style="@style/txt_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/ic_right"
            android:drawablePadding="@dimen/dimen_3"
            android:text="立即注册" />
    </RelativeLayout>
</LinearLayout>
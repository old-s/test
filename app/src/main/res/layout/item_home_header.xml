<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.demo.ctw.ui.view.BannerAdView
        android:id="@+id/view_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15">

        <ImageView
            android:layout_width="@dimen/dimen_25"
            android:layout_height="@dimen/dimen_25"
            android:src="@mipmap/ic_notice" />

        <ViewFlipper
            android:id="@+id/view_filpper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_5"
            android:autoStart="true"
            android:flipInterval="3000"
            android:inAnimation="@anim/filpper_in"
            android:outAnimation="@anim/filpper_out" />

        <TextView
            android:id="@+id/txt_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textColor="@color/app"
            android:textSize="@dimen/size_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_35"
        android:layout_marginLeft="@dimen/size_15"
        android:layout_marginRight="@dimen/size_15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dimen_2"
            android:layout_height="@dimen/size_15"
            android:background="@color/app" />

        <TextView
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_4"
            android:layout_weight="1"
            android:text="热门竞拍"
            android:textColor="@color/C2"
            android:textSize="@dimen/size_15" />

        <TextView
            android:id="@+id/txt_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/ic_triangle"
            android:drawablePadding="@dimen/dimen_3"
            android:text="筛选"
            android:textColor="@color/C3"
            android:textSize="@dimen/size_14" />
    </LinearLayout>
</LinearLayout>
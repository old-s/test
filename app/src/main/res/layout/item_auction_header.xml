<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_marginBottom="@dimen/dimen_10"
        android:drawableLeft="@mipmap/ic_line"
        android:drawablePadding="@dimen/dimen_6"
        android:gravity="center_vertical"
        android:text="订单状态" />

    <RelativeLayout style="@style/layout_white_height">

        <TextView
            android:id="@+id/txt_number"
            style="@style/txt_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_date"
            style="@style/txt_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_number"
            android:layout_marginTop="@dimen/dimen_6" />

        <com.demo.ctw.ui.view.BorderTextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dimen_6"
            android:paddingTop="@dimen/dimen_1"
            android:paddingRight="@dimen/dimen_6"
            android:paddingBottom="@dimen/dimen_1"
            android:textColor="@color/white"
            android:textSize="@dimen/size_14"
            app:contentBackColor="@color/app"
            app:cornerRadius="@dimen/dimen_5" />
    </RelativeLayout>

    <TextView
        style="@style/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_marginBottom="@dimen/dimen_10"
        android:drawableLeft="@mipmap/ic_line"
        android:drawablePadding="@dimen/dimen_6"
        android:gravity="center_vertical"
        android:text="订单详情" />
</LinearLayout>
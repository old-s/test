<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_top" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_140"
        android:background="@mipmap/bg_login"
        android:gravity="center"
        android:text="欢迎来到超推网"
        android:textColor="@color/white"
        android:textSize="@dimen/size_14" />

    <ImageView
        android:id="@+id/img_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-55dp"
        android:src="@mipmap/ic_logo" />

    <EditText
        android:id="@+id/edt_phone"
        style="@style/txt_msg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_40"
        android:layout_marginRight="@dimen/dimen_40"
        android:background="@drawable/bg_divide_corner_20"
        android:drawableLeft="@mipmap/ic_phone"
        android:drawablePadding="@dimen/dimen_15"
        android:hint="请输入手机号"
        android:inputType="number"
        android:maxLength="11"
        android:paddingLeft="@dimen/dimen_15"
        android:textColorHint="@color/C4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_40"
        android:background="@drawable/bg_divide_corner_20"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_code"
            style="@style/txt_msg"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_40"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:drawableLeft="@mipmap/ic_code"
            android:drawablePadding="@dimen/dimen_15"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="@dimen/dimen_15"
            android:textColorHint="@color/C4" />

        <TextView
            android:layout_width="@dimen/dimen_1"
            android:layout_height="@dimen/dimen_30"
            android:background="@color/C4" />

        <TextView
            android:id="@+id/txt_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10"
            android:text="获取验证码"
            android:textColor="@color/app"
            android:textSize="@dimen/size_14" />
    </LinearLayout>

    <EditText
        android:id="@+id/edt_psw"
        style="@style/txt_msg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_40"
        android:background="@drawable/bg_divide_corner_20"
        android:drawableLeft="@mipmap/ic_passward"
        android:drawablePadding="@dimen/dimen_15"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLength="11"
        android:paddingLeft="@dimen/dimen_15"
        android:textColorHint="@color/C4" />

    <TextView
        android:id="@+id/txt_next"
        style="@style/txt_blue"
        android:layout_marginTop="@dimen/dimen_30"
        android:text="下一步" />


    <TextView
        android:id="@+id/txt_login"
        style="@style/txt_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_40"
        android:drawableLeft="@mipmap/ic_back"
        android:drawablePadding="@dimen/dimen_4"
        android:text="返回登录" />
</LinearLayout>
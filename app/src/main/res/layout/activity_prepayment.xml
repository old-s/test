<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_180"
        android:background="@color/app"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/size_20" />

        <TextView
            android:id="@+id/txt_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:textColor="@color/white"
            android:textSize="@dimen/size_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_wechat"
        style="@style/layout_white_height"
        android:layout_marginTop="@dimen/dimen_5"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_wechat" />

        <TextView
            style="@style/txt_title"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_weight="1"
            android:text="微信支付" />

        <RadioButton
            android:id="@+id/view_wechat"
            android:layout_width="@dimen/dimen_18"
            android:layout_height="@dimen/dimen_18"
            android:background="@drawable/bg_check"
            android:button="@color/transparent"
            android:checked="true"
            android:clickable="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_alipay"
        style="@style/layout_white_height"
        android:layout_marginTop="@dimen/dimen_3"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_alpay" />

        <TextView
            style="@style/txt_title"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_weight="1"
            android:text="支付宝支付" />

        <RadioButton
            android:id="@+id/view_alipay"
            android:layout_width="@dimen/dimen_18"
            android:layout_height="@dimen/dimen_18"
            android:background="@drawable/bg_check"
            android:button="@color/transparent"
            android:checked="false"
            android:clickable="false" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_15"
        android:drawableLeft="@mipmap/ic_declare"
        android:drawablePadding="@dimen/dimen_6"
        android:text="本次拍卖需缴纳诚意金1000元；" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_34"
        android:layout_marginTop="@dimen/dimen_6"
        android:text="竞拍结束后我们会在3天内公布竞拍结果；" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_34"
        android:layout_marginTop="@dimen/dimen_4"
        android:text="请确保账户有足够的金额支付拍卖价格；" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_0"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/txt_pay"
        style="@style/txt_blue"
        android:layout_marginBottom="@dimen/dimen_40"
        android:text="立即支付" />
</LinearLayout>
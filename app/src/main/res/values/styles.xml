<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="alert_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="txt_title">
        <item name="android:textColor">@color/C2</item>
        <item name="android:textSize">@dimen/size_16</item>
    </style>

    <style name="txt_msg">
        <item name="android:textColor">@color/C3</item>
        <item name="android:textSize">@dimen/size_14</item>
    </style>

    <style name="txt_other">
        <item name="android:textColor">@color/C4</item>
        <item name="android:textSize">@dimen/size_13</item>
    </style>

    <style name="txt_blue">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_40</item>
        <item name="android:layout_marginLeft">@dimen/dimen_40</item>
        <item name="android:layout_marginRight">@dimen/dimen_40</item>
        <item name="android:background">@drawable/bg_blue_corner_18</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="txt_white_40">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_40</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/dimen_15</item>
        <item name="android:paddingRight">@dimen/dimen_15</item>
        <item name="android:drawablePadding">@dimen/dimen_8</item>
        <item name="android:textColor">@color/C2</item>
        <item name="android:textSize">@dimen/size_14</item>
    </style>

    <style name="txt_white_height">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dimen_6</item>
        <item name="android:paddingBottom">@dimen/dimen_6</item>
        <item name="android:paddingLeft">@dimen/dimen_15</item>
        <item name="android:paddingRight">@dimen/dimen_15</item>
        <item name="android:drawablePadding">@dimen/dimen_8</item>
    </style>

    <style name="layout_white_40">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_40</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/dimen_15</item>
        <item name="android:paddingRight">@dimen/dimen_15</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="layout_white_height">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dimen_15</item>
        <item name="android:paddingRight">@dimen/dimen_15</item>
        <item name="android:paddingTop">@dimen/dimen_8</item>
        <item name="android:paddingBottom">@dimen/dimen_8</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="img_enter">
        <item name="android:layout_marginLeft">@dimen/dimen_10</item>
        <item name="android:src">@mipmap/ic_right</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Animation.Popup" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>